<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
         />

    <TextView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserName"
        android:text="@string/tvUserName"
        android:layout_above="@+id/tvBody"
        android:layout_toRightOf="@+id/ivProfileImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvBody"
        android:id="@+id/tvBody"
        android:layout_below="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_marginLeft="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvTimeCreated"
        android:id="@+id/tvTimeCreated"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout><!-- From: file:/Users/sadhanas/AndroidStudioProjects/SimpleTwitterClient/app/src/main/res/layout/tweet_text.xml -->